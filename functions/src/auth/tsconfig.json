{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "target": "ES2022",
    "lib": ["ES2022"],

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "isolatedModules": true,

    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/test/authPolicy.test.js"],
  "exclude": ["node_modules", "lib"]
}
